

@model kumalo.Models.UserLoginAndRegisterModel;

<h1><center>Login</center></h1>
<br />
<hr />
<br />
<form asp-controller="Home" asp-action="Login" method="post">
    <label>Username</label>
    <input asp-for="@Model.Username" type="text" />
    <label>Password</label>
    <input asp-for="@Model.Password" type="text" />
    <input type="submit" value="Login" />
</form>
<br />
<hr />
<br />
<a asp-controller="Home" asp-action="Register"><center>You do not have an account? Register here</center></a>

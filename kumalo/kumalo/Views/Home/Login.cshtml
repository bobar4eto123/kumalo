
@model kumalo.Models.UserLoginModel;

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="~/css/style_log_reg_edit.css" rel="stylesheet" />
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
<center>
        <div class="wrapper">
            <form asp-controller="Home" asp-action="Login" method="post">
                <h1>Login</h1>
                    <div class="input-box">
                        <input asp-for="@Model.Username" type="text" placeholder="Username" />
                        <i class='bx bxs-user'></i>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    
                    <div class="input-box">
                        <input asp-for="@Model.Password" type="password" placeholder="Password" />
                        <i class='bx bxs-lock-alt'></i>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="error-message">@Html.ValidationMessage("loginError")</div>

                    <button type="submit" class="btn">Login</button>

                    <div class="register-link">
                        <a class="text-white text-decoration-none" asp-area="" asp-controller="Home" asp-action="Register">You don't have an account? Register here</a>
                    </div>
            </form>
        </div>
</center>
</body>
</html>
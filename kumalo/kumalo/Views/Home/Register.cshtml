@model kumalo.Models.UserLoginAndRegisterModel;

@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/style_log_reg_edit.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <center>
        <div class="wrapper">
            <form asp-controller="Home" asp-action="Register" method="post">
                <h1>Register</h1>
                <div class="input-box">
                    <input asp-for="@Model.Username" type="text" placeholder="Username" />
                    <i class='bx bxs-user'></i>
                </div>

                <div class="input-box">
                    <input asp-for="@Model.Password" type="password" placeholder="Password" />
                    <i class='bx bxs-lock-alt'></i>
                </div>
                @* dobavete confirmPasword za sq e samo password za da sa puska! <3 *@
                <button type="submit" class="btn">Register</button>
            </form>
        </div>
    </center>
</body>
</html>


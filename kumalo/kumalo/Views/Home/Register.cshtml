@model kumalo.Models.UserLoginAndRegisterModel;

@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <style>
        /* Green theme styles */
        body {
            background-color: #f0f7f4; /* Light green background */
            color: #fff; /* White text */
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .wrapper {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.1); /* Transparent white background */
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Shadow effect */
        }

        h1 {
            color: #28a745; /* Green heading */
            text-align: center;
            margin-bottom: 30px;
        }

        .input-box {
            margin-bottom: 20px;
        }

            .input-box input {
                width: 100%;
                background: transparent;
                border: none;
                outline: none;
                border: 2px solid rgba(255, 255, 255, .2);
                border-radius: 40px;
                font-size: 16px;
                color: #fff; /* White text */
                padding: 20px 45px 20px 20px;
                box-sizing: border-box;
            }

            .input-box i {
                position: absolute;
                right: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: #fff; /* White icon */
            }

        .btn {
            width: 100%;
            padding: 15px;
            background-color: #28a745; /* Green button */
            color: #fff; /* White text */
            border: none;
            border-radius: 40px;
            font-size: 16px;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #218838; /* Darker green on hover */
            }
    </style>
</head>
<body>
    <center>
        <<div class="wrapper">
            <form asp-controller="Home" asp-action="Register" method="post">
                <h1>Register</h1>
                <div class="input-box">
                    <input asp-for="@Model.Username" type="text" placeholder="Username" style="color: #fff;" />
                    <i class='bx bxs-user' style="color: #fff;"></i>
                </div>

                <div class="input-box">
                    <input asp-for="@Model.Password" type="password" placeholder="Password" style="color: #fff;" />
                    <i class='bx bxs-lock-alt' style="color: #fff;"></i>
                </div>

                <div class="input-box">
                    <input asp-for="@Model.Password" type="password" placeholder="Confirm Password" style="color: #fff;" />
                    <i class='bx bxs-lock-alt' style="color: #fff;"></i>
                </div>
                @* dobavete confirmPasword za sq e samo password za da sa puska! <3 *@
                <button type="submit" class="btn">Register</button>
            </form>
        </div>
    </center>
</body>
</html>

                    